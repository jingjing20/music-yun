.modal {
  position: fixed;
  top: 0;
  right: 0;
  bottom: 0;
  left: 0;
  z-index: 99;
  text-align: center;
  background:rgba(0,0,0,0.6);
}

.panel {
  position: absolute;
  bottom: 0rpx;
  left: 0;
  width: 100%;    /* width:100% 宽度充满整个父元素 */
  min-height: 300rpx;
  box-sizing: border-box;
  background-color: #f8f8f8;
}

/* 可以直接对外部样式修改 */
.modal .icon-cancel {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  padding: 20rpx;   /* 为了增加点击区域的大小 */
}