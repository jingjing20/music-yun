.tab-item {
  font-size: 35rpx;
  margin-left: 20rpx;
  background: #fff;
}

.comment-list {
  padding: 20rpx;
  background-color: #fff;
}

.comment {
  margin-bottom: 20rpx;
}

.comment-title {
  display: flex;
}

.comment-portrait {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
  margin-right: 20rpx;
}

.comment-content {
  margin: 10rpx 0;
  font-size: 32rpx;
  font-weight: 400;
  line-height: 1.5;
}

.comment-nickname {
  font-size: 32rpx;
}

.comment-time {
  font-size: 30rpx;
  color: #939393;
}
